mixin expandable-checkbox-list( data )
  .checkbox-list
    +title-element({title: data.titleList})
    i.checkbox-list__icon.icon-arrow
    .checkbox-list__overlay
    .checkbox-list__list
      each item in data.items
        +checkbox-item({name: `${data.nameList}`, value: `${item.value}`, text: `${item.text}`, checked: item.checked})