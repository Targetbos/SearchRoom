mixin like-button( data )
  .like-button
    label.like-button__label
      if data.checked
        input(type="checkbox" name=`${data.userName}-likebtn` checked=true)
      else
        input(type="checkbox" name=`${data.userName}-likebtn` checked=false)
      .like-button__wrap-btn
        span.like-button__icon 
        .like-button__num= data.num