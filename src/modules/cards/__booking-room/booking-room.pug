include ../../formelements/__date-dropdown/date-dropdown.pug
include ../../formelements/__dropdown/__dropdown-guest/dropdown-guest.pug
include ../../formelements/__buttons/__btn-with-icon/btn-with-icon.pug

mixin booking-room(data)
  .booking-room 
    .booking-room__wrap
      .booking-room__wrap-number-price
        span.booking-room__number-room 888
        .booking-room__price
          span.booking-room__cost-per-day 9 990 
          span.booking-room__cost-day в сутки
      .booking-room__wrap-date-form
        +date-dropdown({titleIn: "Прибытие", titleOut: "Выезд", name: "dateInOut", placeholderIn: "19.08.2019", placeholderOut: "23.08.2019"})
      .booking-room__wrap-guest-form
        +dropdown-guest({title: "Гости", name: "guests"})
      .booking-room__wrap-service-cost  
        .booking-room__inner-service
          .booking-room__box-service
            span.booking-room__service-price 9 990
            span.booking-room__service-days 4 суток
          span.booking-room__service-cost 39 960
        .booking-room__inner-service
          .booking-room__box-service
            span.booking-room__service Сбор за услуги: 
            span.booking-room__service-price скидка 2 179
          i.booking-room__icon-desc i
            span.booking-room__block-info Комментарий к данной строке
          span.booking-room__service-cost 0
        .booking-room__inner-service
          .booking-room__box-service
            span.booking-room__service Сбор за дополнительные услуги
          i.booking-room__icon-desc i
            span.booking-room__block-info Комментарий к данной строке
          span.booking-room__service-cost 300
      .booking-room__wrap-total-cost
        span Итого
        .booking-room__line
        span.booking-room__total-cost 38 081
      .booking-room__wrap-btn-booking
        +btn-with-icon({name:"booking-room",text:"ЗАБРОНИРОВАТЬ"})   

