include ../../forms-elements/__date-dropdown/date-dropdown.pug
include ../../forms-elements/__dropdown/__dropdown-guest/dropdown-guest.pug
include ../../forms-elements/__buttons/__btn-with-icon/btn-with-icon.pug

mixin search-room( data )
  .search-room
    .search-room__wrap
      h3.search-room__title Найдём номера под ваши пожелания
      .search-room__wrap-date
        +date-dropdown({name:"", titleIn: "прибытие", titleOut: "выезд"})
      .search-room__wrap-guest
        +dropdown-guest({title: "Гости"})
      .search-room__wrap-btn
        +btn-with-icon({text:"подобрать номер"})
