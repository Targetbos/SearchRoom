mixin checkbox-list( data )
  .checkbox-list
    .checkbox-list__wrap
      +title-element({title: data.title})
      i.checkbox-list__icon.checkbox-list__icon--rotate
      .checkbox-list__overlay
      if data.visible
        .checkbox-list__list.checkbox-list__list--visible
      else
        .checkbox-list__list
          +checkbox-item({name: `${data.name}`, value: "breakfast", text: "Завтрак", checked: false, list:true})
          +checkbox-item({name: `${data.name}`, value: "desk", text: "Письменный стол", checked: true, list:true})
          +checkbox-item({name: `${data.name}`, value: "chair", text: "Стул для кормления", checked: true, list:true})
          +checkbox-item({name: `${data.name}`, value: "cot", text: "Кроватка", checked: true, list:true})
          +checkbox-item({name: `${data.name}`, value: "tv", text: "Телевизор", checked: false, list:true})
          +checkbox-item({name: `${data.name}`, value: "shampoo", text: "Шампунь", checked: false, list:true})
          +checkbox-item({name: `${data.name}`, value: "tv2", text: "Телевизор", checked: false, list:true})
          +checkbox-item({name: `${data.name}`, value: "shampoo2", text: "Шампунь", checked: false, list:true})