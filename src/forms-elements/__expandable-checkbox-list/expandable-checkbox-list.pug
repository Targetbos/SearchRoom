mixin checkbox-list( data )
  if data.visible
    .checkbox-list
      .checkbox-list__wrap
        +title-element({title: data.title})
        i.checkbox-list__icon.checkbox-list__icon--rotate
        .checkbox-list__overlay
        .checkbox-list__list.checkbox-list__list--visible
          +checkbox-item({name: "breakfast", text: "Завтрак", checked: false})
          +checkbox-item({name: "desk", text: "Письменный стол", checked: true})
          +checkbox-item({name: "chair", text: "Стул для кормления", checked: true})
          +checkbox-item({name: "cot", text: "Кроватка", checked: true})
          +checkbox-item({name: "tv", text: "Телевизор", checked: false})
          +checkbox-item({name: "shampoo", text: "Шампунь", checked: false})
          +checkbox-item({name: "tv2", text: "Телевизор", checked: false})
          +checkbox-item({name: "shampoo2", text: "Шампунь", checked: false})
  else
    .checkbox-list
      .checkbox-list__wrap
        +title-element({title: data.title})
        i.checkbox-list__icon
        .checkbox-list__overlay
        .checkbox-list__list
          +checkbox-item({name: "breakfast", text: "Завтрак", checked: false})
          +checkbox-item({name: "desk", text: "Письменный стол", checked: true})
          +checkbox-item({name: "chair", text: "Стул для кормления", checked: true})
          +checkbox-item({name: "cot", text: "Кроватка", checked: true})
          +checkbox-item({name: "tv", text: "Телевизор", checked: false})
          +checkbox-item({name: "shampoo", text: "Шампунь", checked: false})
          +checkbox-item({name: "tv2", text: "Телевизор", checked: false})
          +checkbox-item({name: "shampoo2", text: "Шампунь", checked: false})