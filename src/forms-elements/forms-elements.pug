.wrap
  .wrapper__elements
    .wrapper-left 
      .wrapper-left__text-field
        +title-element({title: "text field", subtitle: " default"})
        +text-field({placeholder: "Email"})
      .wrapper-left__text-field
        +title-element({title: "text field", subtitle: "hover /focus", marginTop: true})
        +text-field({value: "This is pretty awesome", hover: true})
      .wrapper-left__dropdown
        +title-element({title: "dropdown", subtitle: "default", marginTop: true})
        .wrapper-left__dropdown-wrap
          +dropdown-guest({name: "guest-form"})
      .wrapper-left__masked-text-field
        +title-element({title: "masked text field", subtitle: "default", marginTop: false})
        +masked-text-field({placeholder: "ДД.ММ.ГГГГ"})
      .wrapper-left__date-dropdown
        +date-dropdown({titleIn: "date dropdown", titleOut: "date dropdown", placeholderIn: "ДД.ММ.ГГГГ",placeholderOut: "19.08.2019"})
      .wrapper-left__filter-date-dropdown
        +title-element({title: "filter date dropdown"})
        +filter-date-dropdown({name: "date-in-out"})
      .wrapper-left__subscription-text-field
        +title-element({title: "subscription text field"})
        +subscription-text-field({placeholder: "Email",name: ""})
    .wrapper-center 
      .wrapper-center__checkbox-buttons
        +title-element({title: "checkbox buttons"})
        .wrapper-center__checkbox-buttons-wrap
          +checkbox-item({name: "checkbox", checked:false, text: "Можно курить"})
          +checkbox-item({name: "checkbox", checked:true, text: "Можно с питомцами"})
          +checkbox-item({name: "checkbox", checked:true, text: "Можно пригласить гостей (до 10 человек)"})
      .wrapper-center__radio-buttons
        +title-element({title: "radio buttons"})
        .wrapper-center__radio-buttons-wrap
          +radio-buttons({name: "female", checked: true, text: "Мужчина"})
          +radio-buttons({name: "female", checked: false, text: "Женщина"})
      .wrapper-center__toggle
        +title-element({title: "toggle"})
        .wrapper-center__toggle-wrap
          +toggle({name: "toggle", checked: true, text: "Получать спецпредложения"})
          +toggle({name: "toggle", checked: false, text: "Получать спецпредложения"})
      .wrapper-center__like-button
        +title-element({title: "like button"})
        .wrapper-center__wrap-like-button
          +like-button({span:"2"})  
          +like-button({span:"12", check: true})
      .wrapper-center__rate-button
        +title-element({title: "rate button"})
        .wrapper-center__rate-button-wrap
          +rate-button({name: "rating"})
          +rate-button({name: "rating 1"})

    .wrapper-right
      .wrapper-right__range-slider
        +title-element({title: "range slider", subtitle: " 5 000Р - 10 000Р", marginTop: true})
        .wrapper-right__range-slider-wrap
          +range-slider()
      .wrapper-right__buttons
        +title-element({title: "buttons"})
        .wrapper-right__wrap-btn
          +button-blue({name: "btn", value: "btn", text: "Click Me"})
          +button-blue({name: "btn", value: "btn", text: "Click Me", hover:true})
        .wrapper-right__wrap-btn
          +button-white({name: "btn", value: "btn", text: "Click Me"})
          +button-white({name: "btn", value: "btn", text: "Click Me", hover:true})
        .wrapper-right__wrap-icon-link
          +button-link({name: "btn", value: "btn", text: "Click Me"})
          +button-link({name: "btn", value: "btn", text: "Click Me", hover:true})
        .wrapper-right__wrap-btn-with-icon
          +button-with-icon({name:"btn", value: "btn", text: "Перейти к оплате"})
      .wrapper-right__pagination
        +title-element({title: "pagination"})
        .wrapper-right__wrap-pagination
          +pagination({name: "btn"})
  .wrapper__elements
    .wrapper-left
      .wrapper-left__dropdown-room
        +title-element({title: "dropdown", subtitle: "DEFAULT", marginTop:true})
        .wrapper-left__wrap-dropdown-room
          +dropdown-room({name:"select-room", open: false})
        +title-element({title: "dropdown", subtitle: "EXPANDED", marginTop:true})
        .wrapper-left__wrap-dropdown-room
          +dropdown-room({name:"select-room", open: true})
      .wrapper-left__expandable-checkbox-list
        .wrapper-left__wrap-checkbox-list
          +checkbox-list({title: "expandable checkbox list"})
        .wrapper-left__wrap-checkbox-list
          +checkbox-list({title: "expandable checkbox list"})
    .wrapper-center 
      .wrapper-center__dropdown-guest
        +title-element({ title: "dropdown"})
        .wrapper-center__wrap-dropdown-guest
          +dropdown-guest({name: "dpguest"})
      .wrapper-center__rich-checkbox-btn
        +title-element({title: "rich checkbox buttons"})
        .wrapper-center__wrap-checkbox
          +rich-checkbox-buttons({name: "wide-corridor", head: "Широкий коридор", desc: "Ширина коридоров в номере не менее 91 см"})
          +rich-checkbox-buttons({name: "assistent", head: "Помощник для инвалидов", desc: "На этаже Вас встретит специалист и проводит до номера"})
    
    .wrapper-right
      .wrapper-right__dropdown-guest
        +title-element({ title: "dropdown"})
        .wrapper-center__wrap-dropdown-guest
          +dropdown-guest({name: "dpguest"})
      .wrapper-right__bullet-list
        +title-element({title: "bullet list"})
        .wrapper-right__wrap-bullet-list
          +bullet-list({text:["Нельзя с питомцами","Без вечеринок и мероприятий", "Время прибытия — после 13:00, в выезд до 12:00"]})
  .wrapper__elements
    .wrapper-left
      .wrapper-left__advantages
        +advantages({img: "/forms-elements/__advantages/img/emoticon.svg", head: "Комфорт", desc: "Шумопоглащающие стены"})
        +advantages({img: "/forms-elements/__advantages/img/city.svg", head: "Удобство", desc: "Окно в каждой из спален"})
    .wrapper__feedback
      +feedback()