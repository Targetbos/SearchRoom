nav.menu
    ul.menu__list
        each name, val in (['Home', 'About Us', 'Services','Careers','News','Documentation'])
            li.menu__item
                if val == 0 
                    a.menu__link.menu__link--active(href="#")=name
                else if val == 2
                    a.menu__link(href="#")=name
                        img.menu__img(src="../src/img/expand_more.svg")
                else 
                    a.menu__link(href="#")=name